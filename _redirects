# Cloudflare Pages redirects
# Format: /from /to [status]

# Admin routing
/admin /admin/index.html 200

# Blog routing
/blog /blog/index.html 200
/blog/ /blog/index.html 200

# Legacy blog-post path (no slug)
/blog-post /blog-post/index.html 200
/blog-post/ /blog-post/index.html 200
/blog.html /blog/index.html 301
/blog-post.html /blog-post/index.html 301

# Subscribe page routing
/subscribe /subscribe/index.html 200
/subscribe/ /subscribe/index.html 200

# Appointments routing
/appointments /appointments/index.html 200
/appointments/ /appointments/index.html 200

# Team profile routing - legacy routes
/team /about.html 301
/team/ /about.html 301
/team/* /people/:splat 301

# Profile routing - legacy routes
/profile /about.html 301
/profile/ /about.html 301
/profile/* /people/:splat 301

# People profile routing
/people /about.html 301
/people/ /about.html 301
/people/* /people/index.html?slug=:splat 200

