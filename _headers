# Cloudflare Pages Headers
# AGGRESSIVE NO-CACHE POLICY - Prevents ALL caching layers
# This ensures blog data is always fresh from GitHub API

/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Content-Type-Options: nosniff

# Blog pages - NO CACHE
/blog.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Cache-Control: no-cache

/blog-post.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Cache-Control: no-cache

# Blog data layer - NO CACHE
/src/data/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Cache-Control: no-cache

# Admin pages - NO CACHE
/admin/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Cache-Control: no-cache

# Static blog content - NO CACHE (if any exists)
/content/blog/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Cache-Control: no-cache

